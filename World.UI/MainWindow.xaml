<Window x:Class="World.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:System="clr-namespace:System;assembly=mscorlib"
        Title="MainWindow" 
        Height="622" 
        Width="800"
        Name="PART_MainWindow"
        >
    <Window.Background>
        <LinearGradientBrush
            StartPoint="0.5,1"
            EndPoint="0.5,0">
            <GradientStop
                Color="#FF0800FF"
                Offset="0" />
            <GradientStop
                Color="Black"
                Offset="1" />
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <Viewbox>
            <Canvas
                Name="PART_Canvas"
                Width="800"
                Height="600"
                />
            </Viewbox>
        <Button
            Margin="0,0,102,0"
            Click="SeedHerbivors"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Content="Herbivors"
            Width="100" />
        <Button
            Click="SeedCarnivors"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Content="Carnivors"
            Width="100" />

        <ListBox
            ItemsSource="{Binding ElementName=PART_MainWindow, Path=Stats}"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Width="176"
            Height="208"
            Margin="0,0,10,10"
            TextBlock.FontSize="10"
            TextBlock.Foreground="White"
            Background="#70000000"
            BorderBrush="Transparent"
            >
            <ListBox.ItemTemplate>
                <DataTemplate 
                    DataType="{x:Type System:String}">
                    <TextBlock
                        Text="{Binding}" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
